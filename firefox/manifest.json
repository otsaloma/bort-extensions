{
  "manifest_version": 2,
  "name": "Bort",
  "version": "2.0",
  "author": "Osmo Salomaa",
  "description": "Bookmarking extension for Bort.io",
  "icons": {
    "16": "bort-16.png",
    "32": "bort-32.png",
    "48": "bort-48.png",
    "128": "bort-128.png"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "bort-16.png",
      "32": "bort-32.png",
      "64": "bort-64.png"
    },
    "default_title": "Add Bort.io bookmark"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["activeTab"],
  "offline_enabled": false
}
