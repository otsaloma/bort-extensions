{
    "manifest_version": 2,
    "name": "Bort",
    "version": "1.0",
    "author": "Osmo Salomaa",
    "description": "Official extension for the Bort.io bookmark service",
    "icons": {
        "16": "bort-16.png",
        "32": "bort-32.png",
        "48": "bort-48.png",
        "128": "bort-128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "bort-19.png",
            "38": "bort-38.png"
        },
        "default_title": "Add Bort.io bookmark"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "activeTab"
    ],
    "offline_enabled": false
}
